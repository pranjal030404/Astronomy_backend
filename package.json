{
  "name": "astronomy-lover-server",
  "version": "1.0.0",
  "description": "Backend API for Astronomy Lover social platform",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "jest --watchAll --verbose",
    "seed": "node seeder",
    "seed:fresh": "node seeder --fresh",
    "seed:destroy": "node seeder --destroy",
    "clear:fake": "node scripts/clearSeededData.js",
    "clear:fake:confirm": "node scripts/clearSeededData.js --confirm"
  },
  "keywords": [
    "express",
    "api",
    "astronomy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.0",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "sharp": "^0.33.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
